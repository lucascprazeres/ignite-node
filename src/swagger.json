{
  "openapi": "3.0.0",
  "info": {
    "title": "RentX API",
    "description": "This is a car rent API",
    "version": "1.0.0",
    "contact": {
      "email": "olucascostadp@gmail.com"
    }
  },
  "paths": {
    "/categories/import": {
      "post": {
        "tags": [
          "categories"
        ],
        "security": [
          { "bearerAuth": [] }
        ],
        "summary": "Import categories",
        "description": "Import categories from a csv file.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resources created sucessfully."
          }
        }
      }
    },
    "/categories": {
      "post": {
        "tags": [
          "categories"
        ],
        "security": [
          { "bearerAuth": [] }
        ],
        "summary": "Create category",
        "description": "Creates a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Category"
              },
              "example": {
                "name": "SUV",
                "description": "this is a SUV"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Resource created sucessfully."
          },
          "400": {
            "description": "Category already exists."
          }
        }
      },
      "get": {
        "tags": [
          "categories"
        ],
        "summary": "List all categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Resources returned sucessfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": [
          "specifications"
        ],
        "security": [
          { "bearerAuth": [] }
        ],
        "summary": "Create specification",
        "description": "creates a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              },
              "example": {
                "name": "Air conditionator",
                "description": "AC integrated"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Resource created sucessfully."
          },
          "400": {
            "description": "Specification already exists."
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": ["sessions"],
        "summary": "Authenticates a user",
        "description": "Authentiticates a user and returns a JWT token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucessfully authenticated user."
          },
          "400": {
            "description": "Email or password incorrect for this user."
          }
        }
      }
    },
    "/cars": {
      "post": {
        "tags": ["cars"],
        "security": [
          { "bearerAuth": [] }
        ],
        "summary": "Create car",
        "description": "creates a new car",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Car"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucessfully created resource."
          },
          "400": {
            "description": "This license plate is already in use."
          }
        }
      }
    },
    "/cars/images/{id}": {
      "post": {
        "tags": ["cars"],
        "summary": "Upload images",
        "description": "Uploads car images",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Car id"
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucessfully created resources."
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Car": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "daily_rate": {
          "type": "number"
        },
        "license_plate": {
          "type": "string"
        },
        "fine_amount": {
          "type": "number"
        },
        "brand": {
          "type": "string"
        },
        "category_id": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}